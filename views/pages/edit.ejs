<!DOCTYPE html>
<html lang="en">
<head>
<style>
.glyph-icon svc {
    width: 16px;
    height: 16px;
}
</style>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>This is great</h1>
    <h2>Edit Contact Record</h2>
    <form method="post" action="/editrec">
        <input type="hidden" name="rowid" value="<%= contact.rowid %>">
        <div class="form-group">
            <label for="fnameinp" class="col-2">First Name</label>
            <input type="text" name="fname" class="form-control col-3" id="fnameinp" value="<%= contact.fname %>"<>
        </div>
        <div class="form-group">
            <label for="lnameinp" class="col-2">Last Name</label>
            <input type="text" name="lname" value="<%= contact.lname %>" class="form-control col-3" id="lnameinp">
        </div>
        <div class="form-group">
            <label for="email" class="col-2">Email Address</label>
            <input type="text" name="email" id="email" value="<%= contact.email %>" class="form-control col-3">
        </div>
        <div class="form-group">
            <label for="phone" class="col-2">Telephone</label>
            <input type="text" class="form-control col-3" value="<%= contact.phone %>" name="phone" id="phone" >
        </div>
            <div class="form-group">
                <input type="checkbox" name="delCont">&nbsp;&nbsp;&nbsp;Delete this contact
            </div>
            <button type="submit" class="btn btn-primary">Save</button>`
    </form>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
