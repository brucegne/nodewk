<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <h1>This is great</h1>
    <p>Welcome to templating using EJS</p>
    <form method="post" action="contact_post">
        <div class="form-group">
            <label for="fnameinp">First Name</label>
                <input type="text" name="fname" class="form-control-sm" id="fnameinp">
        </div>
        <div class="form-group">
            <label for="lnameinp">Last Name</label>
            <input type="text" name="lname" class="form-control-sm" id="lnameinp">
        </div>
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="text" name="email" id="email" class="form-control-sm">
        </div>
        <div class="form-group">
            <label for="phone">Telephone</label>
            <input type="text" class="form-control-sm" name="phone" id="phone" >
        </div>
            <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <ul>
      <% contacts.forEach(function(contact) { %>
        <li>
		<strong><%= contact.fname %> <%= contact.lname%></strong>
          Email Address: <%= contact.email %>,
	  at telephone <%= contact.phone %>
        </li>
      <% }); %>
    </ul>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
