<!DOCTYPE html>
<html lang="en">
<head>
<style>
.glyph-icon svc {
    width: 16px;
    height: 16px;
}
</style>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron pt-5" style="width: 350px;">
      <h2>Add/Edit Contact Information</h2>
    <form method="post" action="contact_post">
        <div class="form-group">
            <label for="fnameinp" class="col-2">First Name</label>
            <input type="text" name="fname" class="form-control col-3" id="fnameinp">
        </div>
        <div class="form-group">
            <label for="lnameinp" class="col-2">Last Name</label>
            <input type="text" name="lname" class="form-control col-3" id="lnameinp">
        </div>
        <div class="form-group">
            <label for="email" class="col-2">Email Address</label>
            <input type="text" name="email" id="email" class="form-control col-3">
        </div>
        <div class="form-group">
            <label for="phone" class="col-2">Telephone</label>
            <input type="text" class="form-control col-3" name="phone" id="phone" >
        </div>
            <button type="submit" class="btn btn-primary" style="margin-top:15px;">Submit</button>
    </form>
  </div>
  <div style="width:600px;">
    <table class="table table-dark table-striped" style="margin-top: 20px;">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">EMail</th>
          <th scope="col">Phone</th>
        </tr>
      </thead>
      <tbody>
      <% contacts.forEach(function(contact) { %>
        <tr>
          <td><a href="/edit/<%= contact.rowid %>/"<span class="material-symbols-outlined">edit</span></a></td>
          <td><%= contact.fname %></td>
          <td><%= contact.lname %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
